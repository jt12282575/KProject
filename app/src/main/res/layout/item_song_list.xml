<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/isl_iv_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/isl_tv_song_list_name"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:maxLines="2"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/isl_iv_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="歌單名稱"
        />
    <TextView
        android:id="@+id/isl_tv_song_list_owner_and_date"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:maxLines="2"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/isl_iv_image"
        app:layout_constraintTop_toBottomOf="@id/isl_tv_song_list_name"
        tools:text="Dada@2020/11/10"
        />



</androidx.constraintlayout.widget.ConstraintLayout>